<body ng-controller="accountCtrl">
    <!-- main section -->
    <main class="container">
        @Html.Partial("~/Views/Shared/_LayoutAccountHeader.cshtml")
    </main>
        <div class="bg-white" ng-init="Login()">
            <!-- login form section start -->
            <div class="row d-flex justify-content-center align-items-center">
                <div class="col-lg-8 m-auto d-block p-3 mb-5  w-50 bg-white mt-5 shadow">
                    <p class="Accounttitle text-center text-primary">Login</p>
                    <form name="myform" ng-submit="loginvalidation()" novalidate>
                        <div class="form-group py-3">
                            <label class="fs-4">Email:</label>
                            <input type="email" name="email" id="email" ng-model="email" class="form-control" ng-pattern="Emailformat" placeholder="Enter your email" ng-required="true">
                            <span ng-show="myform.$submitted || myform.Email.$dirty">
                                <span class="text-danger fw-bold" ng-show="myform.email.$error.required"><i class="fa fa-exclamation-circle"></i>Please fill the email address</span>
                                <span class="text-danger fw-bold" ng-show="myform.email.$error.pattern"><i class="fa fa-exclamation-circle"></i>Invalid email</span>
                            </span>
                        </div>
                        <div class="form-group py-3">
                            <label class="fs-4">Password:</label>
                            <input type="password" name="password" id="password" ng-model="password" class="form-control" placeholder="Enter your password" ng-required="true">
                            <span toggle="#password" class="hideshowicon text-primary m-2 fa fa-fw fa-eye field-icon toggle-password"></span>
                            <span ng-show="myform.$submitted || myform.Email.$dirty">
                                <span class="text-danger fw-bold" ng-show="myform.password.$error.required"><i class="fa fa-exclamation-circle"></i>Please fill the password</span>
                                <span class="text-danger fw-bold" ng-show="myform.password.$error.minlength"><i class="fa fa-exclamation-circle"></i>Password contain atleast 3 value.</span>
                            </span>
                        </div>
                        <div class="form-group py-2">
                            <label>Remember me</label>
                            <input type="checkbox" name="recollect" ng-model="recollect">
                        </div>
                        <button type="submit" id="submit" class="btn btn-primary mt-2"@* ng-click="loginvalidation()"*@>Login</button>
                        <span ng-show="loginfaild" class="ps-4">
                            <span class="text-danger fw-bold" ng-bind="loginfaild"></span>
                        </span>
                        <span ng-show="loginsuccess" class="ps-4">
                            <span class="text-success fw-bold" ng-bind="loginsuccess"></span>
                        </span>
                        <div class="mt-3">
                            <p class="text-center">
                                Don't have an Account? <a href="@Url.Action("Registration","Account")" class="fw-bold mt-2 text-dark">Sign Up</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- login form section end -->
</body>

