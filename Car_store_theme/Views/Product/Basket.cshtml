   <body ng-controller="productCtrl"  ng-init="checkUserCookie();AddtoProductcart()">
    <div class="sticky-top container mt-2">
        <!--Header starts-->
        @Html.Partial("~/Views/Shared/_LayoutHeader.cshtml")
        <!--Header ends-->
    </div>
    @*Main Section Starts*@
        <section class="bg-white">
            <div class="container py-5">
                <div class="row d-flex justify-content-center my-4">
                    <div class="col-md-8">
                        <div class="card mb-4">
                            <div class="card bg-light py-3">
                                <h5 class="ms-2">Items</h5>
                            </div>
                            <div class="card-body">
                                <!-- Single item -->
                                <div class="row" ng-repeat="addtocart in addtocarts track by $index ">
                                    <div class="col-lg-3 col-md-12 mb-4 mb-lg-0">
                                        <!-- Image -->
                                        <div class="bg-image hover-overlay hover-zoom ripple rounded" data-mdb-ripple-color="light">
                                            <img ng-src="{{addtocart.Image}}"  class="img-fluid" alt="Blue Jeans Jacket" />                                         
                                        </div>
                                        <!-- Image -->
                                    </div>

                                    <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                                        <!-- Data -->
                                        <p><strong ng-bind="addtocart.ProductName"></strong></p>                                       
                                        <button type="button" class="btn btn-primary btn-sm me-1 mb-2" data-bs-toggle="tooltip"
                                                title="Remove item"ng-click="removeCart($index)">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                        <button type="button" class="btn btn-danger btn-sm mb-2" data-bs-toggle="tooltip"
                                                title="Move to the wish list">
                                            <i class="fa fa-heart"></i>
                                        </button>
                                        <!-- Data -->
                                    </div>

                                    <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                                        <!-- Quantity -->
                                        <div class="d-flex mb-4" style="max-width: 300px">
                                             <div class="form-outline">
                                                <input id="form1" min="1" name="quantity" value="1" type="number" class="form-control" />
                                                <label class="form-label" for="form1">Quantity</label>
                                            </div>      
                                        </div>
                                        <!-- Quantity -->
                                        <!-- Price -->
                                        <p class="text-start text-md-center">
                                            <strong ng-bind="'$'+addtocart.Price"></strong>
                                        </p>
                                        <!-- Price -->
                                    </div>
                                </div>
                                <!-- Single item -->                  
                            </div>
                        </div>
                        <div class="card mb-3 bg-light mt-0 w-50 p-2">
                            <a class="text-muted" href="@Url.Action("ProductList","Product")">Continue Shopping</a>
                        </div>
                        <div class="mb-4 ">
                            <div class="list-unstyled">
                                <p><strong>We Accept</strong></p>
                                <img class="image-zoom" src="~/images/debitcard-image1.png">
                                <img class="image-zoom" src="~/images/debitcard-image2.png">
                                <img class="image-zoom" src="~/images/debitcard-image3.png">
                                <img class="image-zoom" src="~/images/debitcard-image4.png">
                                <img class="image-zoom" src="~/images/debitcard-image5.png">
                            </div>
                        </div>
                    </div>

                    <!--summary section-->
                    <div class="col-md-4">
                        <div class="card mb-4">
                            <div class="card bg-light py-3">
                                <h5 class="ms-2">Summary</h5>
                            </div>
                            <div class="card-body">
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                                        Products
                                        <span ng-bind="'$'+Totalprice"></span>
                                    </li>
                                    
                                    <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                        Shipping
                                        <span>$0</span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                                        <div>
                                            <strong>Total amount</strong>
                                            <strong>
                                                <span class="mb-0"></span>
                                            </strong>
                                        </div>
                                        <span><strong ng-bind="'$'+Totalprice"> </strong></span>
                                    </li>
                                </ul>
                                <button type="button" class="btn btn-primary btn-lg btn-block">
                                    Go to checkout
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    <!-- Footer Starts Here -->
    <!-- Footer Ends Here -->
</body>

