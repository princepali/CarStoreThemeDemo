<header class="bg-light sticky-top">
    @*Logo*@
    <div class="row bg-light">
        <div class="col-5 col-sm-6">
            <div class="row">
                <div class="col-12">
                    <img src="~/images/logo.png" class="img-fluid" alt="logo" />
                </div>
            </div>        
        </div>
        <div class="col-7 col-sm-6">
            <div class="row bg-light">
                <div class="col-12">
                    <span class="d-block fw-bold greetingtxt" ng-bind="currentUserName"></span>
                    <span id="group">
                        <button class="btn-info d-none d-md-block float-end m-3" href="">
                            <a href="@Url.Action("Basket","Product")">

                                <img src="~/images/icon-cart.png" />
                                <span class="badge badge-light">5</span>

                            </a>
                        </button>
                    </span>
                    <a href="#" class="redtext Myaccountdesk d-none d-md-block">
                        <i class="fa fa-heart fa-2x float-end ms-3 mt-3" aria-hidden="true"></i>
                    </a>
                    <a type="button" class="Myaccountdesk btn btn-outline-dark bg-success text-white mt-3 m-2 float-end" ng-show="hideloginbutton" href="@Url.Action("Registration", "Account")">
                        Register
                    </a>
                    <a type="button" class="Myaccountdesk btn btn-outline-dark bg-success text-white mt-3 m-2 me-1 float-end" ng-show="hideregisterbutton" href="@Url.Action("Login", "Account")">
                        Login
                    </a>
                    <button type="submit" class="Myaccountdesk btn btn-outline-dark m-3 bgcolor text-white d-inline float-end float-sm-end" ng-show="showLogoutButton" ng-click="logoutCurrentUser()">
                        Logout
                    </button>
                </div>
                <div class="col-sm-12 d-flex searchbar w-100 pt-2">
                    <input class="d-flex w-100 border bg-white" type="text" placeholder="Search Entire Store here" />
                    <input class="border bgcolor text-white" type="button" value="search" />
                </div>
            </div>
            <div class="row d-sm-none d-block">
                <div class="col-sm-12 d-none d-sm-block d-flex searchbar w-100 pt-2">
                    <input class="d-flex w-100 border" type="text" placeholder="Search Entire Store here" />
                    <input class="border bgcolor text-white border" type="button" value="search" />
                </div>
            </div>
        </div>
    </div>
    <!--  Navbar starts-->
    <div class="row bg-light border">
        <div class="col-12 col-sm-12 navmargin">
            <nav class="navbar visible-lg navbartop navbar-expand-lg navbar-light">
                <button class="navbar-toggler m-2 text-danger" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <div class="navbar-nav">
                        <div class="bottom-link">
                            <ul class="list-group list-group-horizontal-md">
                                <li class="d-block d-md-none m-sm-1">
                                    <a href="#" class="redtext">
                                        <i class="fa fa-heart fa-2x m-2" aria-hidden="true"></i><span class="redtext">Wishlist</span>
                                    </a>
                                </li>
                                <li class="d-block d-md-none m-md-1">
                                    <a href="@Url.Action("Basket","Product")">
                                        <img src="~/images/icon-cart.png" />
                                        <span class="fw-normal redtext">
                                            Items
                                        </span>
                                    </a>
                                </li>
                                <li class="list-group-item Homenav border">
                                    <a class=" fw-bold text-white" href="@Url.Action("Index","Home")">HOME</a>
                                </li>
                                <li class="list-group-item border">
                                    <a class="fw-bold text-dark" href="@Url.Action("Productlist","Product")">MERCEDES</a>
                                </li>
                                <li class="list-group-item border">
                                    <a class="fw-bold text-dark" href="#">HYUNDAI</a>
                                </li>
                                <li class="list-group-item border">
                                    <a class="fw-bold text-dark" href="#">TOYOTA</a>
                                </li>
                                <li class="list-group-item border">
                                    <a class="fw-bold text-dark" href="#">CHEVROLET</a>
                                </li>
                                <li class="list-group-item border">
                                    <a class="fw-bold text-dark" href="#">AUDI</a>
                                </li>
                                <li class="list-group-item border">
                                    <a class="fw-bold text-dark" href="#">BMW</a>
                                </li>
                                <li class="list-group-item border ">
                                    <a class="fw-bold text-dark" href="#">LEXUS</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>
        </div>

    </div>
    <!--  Navbar ends-->
</header>